[diff]
	tool = nvimdiff
[difftool "nvimdiff"]
	cmd = nvim -d $LOCAL $REMOTE
[merge]
	tool = nfugitive
[mergetool "nvimdiff4"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "nfugitive"]
	cmd = nvim -f -c "Gdiff" "$MERGED"
[commit]
	verbose = true
	gpgSign = true
[editor]
    tool = nvim
[alias]
	d = difftool
[pull]
	rebase = false
[init]
	defaultBranch = develop
